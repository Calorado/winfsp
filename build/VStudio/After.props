<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <MyProductFileArch Condition="'$(PlatformTarget)'=='x64'">x64</MyProductFileArch>
        <MyProductFileArch Condition="'$(PlatformTarget)'=='x86'">x86</MyProductFileArch>
        <MyProductFileArch Condition="'$(PlatformTarget)'=='arm64'">a64</MyProductFileArch>
    </PropertyGroup>

    <PropertyGroup>
        <OutDir>$(SolutionDir)build\$(Configuration)\</OutDir>
        <IntDir>$(SolutionDir)build\$(ProjectName).build\$(Configuration)\$(MyProductFileArch)\</IntDir>
    </PropertyGroup>
</Project>
